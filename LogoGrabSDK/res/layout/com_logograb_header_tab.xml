<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/com_logograb_bg_header_tab"
    android:padding="5dp" >

    <FrameLayout
        android:id="@+id/headerTabIconFrame"
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical" >

        <ImageView
            android:id="@+id/headerTabIcon"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >
        </ImageView>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/headerTabTitleContainer"
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical" >

        <TextView
            android:id="@+id/headerTabTitleText"
            style="@style/headerTabText"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical" />
    </FrameLayout>
    <FrameLayout
        android:id="@+id/headerTabBtnTitleContainer"
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical" >

        <TextView
            android:id="@+id/headerTabBtnTitleText"
            style="@style/headerTabBtnText"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical|right" />
    </FrameLayout>
    
    <FrameLayout
        android:id="@+id/headerTabBtnIconContainer"
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical" >

        <ImageView
            android:id="@+id/headerTabBtnIcon"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >
        </ImageView>
    </FrameLayout>

</RelativeLayout>