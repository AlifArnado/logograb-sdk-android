<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_bg_action"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/brand_detail_action_header_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/brand_detail_action_header_icon_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal" >
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/brand_detail_action_header_expand_icon_container"
            android:layout_width="0dp"
            android:layout_height="0dp" >

            <ImageView
                android:id="@+id/brand_detail_action_header_expand_icon_image"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />
        </RelativeLayout>

        <!-- <FrameLayout -->
