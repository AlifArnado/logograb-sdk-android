<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/userRowContainer"
        android:layout_width="0dp"
        android:layout_height="0dp" >

        <FrameLayout
            android:id="@+id/userIconFrame"
            android:layout_width="0dip"
            android:layout_height="0dip"
            android:layout_gravity="center_horizontal" >

            <ImageView
                android:id="@+id/userIcon"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/gray_bg_action" >
            </ImageView>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/com_logograb_mask_user_icon" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/userContentContainer"
            android:layout_width="0dip"
            android:layout_height="0dip" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/userContentTitleText"
                    style="@style/commentTitleRow"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/userContentDescText"
                    style="@style/commentDescRow"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical" />
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/userBrandIconFrame"
            android:layout_width="0dip"
            android:layout_height="0dip"
            android:layout_gravity="center_vertical" >

            <ImageView
                android:id="@+id/userBrandIcon"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >
            </ImageView>
        </FrameLayout>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/divider_color" />

</RelativeLayout>