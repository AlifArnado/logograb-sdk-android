<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg_badge" >

    <ImageView
        android:id="@+id/badge_bg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <FrameLayout
        android:id="@+id/badge_text_container"
        android:layout_width="0dp"
        android:layout_height="0dp" 
        android:background="@drawable/com_logograb_bg_badge_text">

        <TextView
            android:id="@+id/badge_text"
            style="@style/badgeText"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/badge_icon_container"
        android:layout_width="0dp"
        android:layout_height="0dp" >

        <ImageView
            android:id="@+id/badge_icon"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </FrameLayout>

</RelativeLayout>