<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="@android:style/Theme.NoTitleBar.Fullscreen"></style>

    <style name="Theme.Custom.Transparent" parent="@style/AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="titleRow">
        <item name="android:textColor">@color/red_icon_stroke</item>
        <item name="android:textSize">12sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="descRow">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">8sp</item>
        <item name="android:lines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="brandGalleryText">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lines">2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="actionTitleRow">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">12sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="actionDescRow">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">8sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="headerTabText">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="headerTabBtnText">
        <item name="android:textColor">@color/red_on</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="addCommentHeaderText">
        <item name="android:textColor">@color/red_on</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="addCommentText">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="commentTitleRow">
        <item name="android:textColor">@color/red_icon_stroke</item>
        <item name="android:textSize">15sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="profileUserTitle">
        <item name="android:textColor">@color/red_icon_stroke</item>
        <item name="android:textSize">19sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="commentDescRow">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">11sp</item>
        <item name="android:lines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="commentRatingsText">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="btnTitle">
        <item name="android:textColor">@color/red_on</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="badgeText">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="iconStyle">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="iconStyleRed">
        <item name="android:textColor">@color/red_icon_stroke</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="iconStyleMap">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SearchEditText">
        <item name="android:padding">5dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/ButtonTextSize</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColorHint">#e2e2e2</item>
    </style>

    <style name="locationTitleRow">
        <item name="android:textColor">@color/red_icon_stroke</item>
        <item name="android:textSize">@dimen/locationTitleTextSize</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="locationDesc">
        <item name="android:lines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/locationDescTextSize</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

</resources>